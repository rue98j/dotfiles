# Zathura "Zen" Configuration

# Copy text to system clipboard (Standard Ctrl+C behavior)
set selection-clipboard clipboard

# Enable "Dark Mode" for PDFs
set recolor "true"
set recolor-lightcolor "#000000"
set recolor-darkcolor "#FFFFFF"

# UI Colors (Matches a dark terminal)
set default-bg "#000000"
set default-fg "#FFFFFF"
set statusbar-bg "#1a1a1a"
set statusbar-fg "#FFFFFF"

# Smooth scrolling
set scroll-step 100
